
<div class="container">


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {:class => "form-signin", :style => "max-width:400px; margin-left:auto; margin-right: auto;", :method => :put}) do |f| %>

  <h2 class="form-signin-heading">Change your password</h2>

  <%= f.hidden_field :reset_password_token %>

  <div class="form-inputs">



    
    <%= f.password_field :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => true, :class =>"form-control", :placeholder => "New password" %>
    <%= f.password_field :password_confirmation, :required => true, :class =>"form-control", :placeholder => "Confirm your new password" %>
    
  </div>

  <div class="form-actions">
    <%= f.submit "Change my password", :class =>"btn btn-lg btn-primary btn-block" %>
    

  </div>

  <br/>


<% end %>



</div>
