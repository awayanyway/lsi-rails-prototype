<button id="2">show spectrum</button>


<div id="fullspectrum" style="height: 50px; width: 100%;"> </div> 
<div id="spectrum" style="height: 420px; width: 100%;"> </div>
   
    



<script type="text/javascript">
var cont,cont2, data, opt; 
cont =  document.getElementById("spectrum");
cont2 =  document.getElementById("fullspectrum");

data =  <%= @dx_data[2][@page] %> ;


opt = {
        
        title: "<%= @dx_data[0][:TITLE][0] %>",
        xaxis: {
        title: "<%= @dx_data[0][:SYMBOL][@indx] %> ( <%= @dx_data[0][:kUNITS][@indx]  %> )",
       
        directionReversed: <%=@dx_data[0][:xaxis_reversed]%>,
        },
        yaxis: {
        title: "<%= @dx_data[0][:SYMBOL][@indy] %> ( <%= @dx_data[0][:kUNITS][@indy] %> )",
        titleAngle: 90, 
        autoscale: false     
        },
        
       
    };

dual_mouse_zoom(cont,cont2, data, opt);
</script>


<script>
$(document).ready(function(){
  $("button#2").click(function(){
    $("div#spectrum").toggle();  });
});

</script>
